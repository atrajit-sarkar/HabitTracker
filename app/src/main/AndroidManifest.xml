            android:enabled="false"
            android:icon="@mipmap/ic_launcher_angry_sitama"
            android:roundIcon="@mipmap/ic_launcher_angry_sitama"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Activity alias for Atrajit (developer photo) icon -->
        <activity-alias
            android:name=".MainActivity.Atrajit"
            android:targetActivity=".MainActivity"
            android:exported="true"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_atrajit"
            android:roundIcon="@mipmap/ic_launcher_atrajit"
