<?xml version="1.0" encoding="utf-8"?>
<!-- Circular frame with glowing border for expanded overdue icon (light mode - black shadow) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer shadow layer (black shadow for light backgrounds) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="52dp"
                android:centerColor="#60000000"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Border layer (solid red) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF5252" />
            <size
                android:width="104dp"
                android:height="104dp" />
        </shape>
    </item>
    
    <!-- Inner circle (transparent to show image) -->
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>
