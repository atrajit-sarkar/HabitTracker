<?xml version="1.0" encoding="utf-8"?>
<!-- Morning Welcome - Serene sunrise gradient with warm colors -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <gradient
        android:angle="135"
        android:startColor="#FEF3C7"
        android:centerColor="#FCD34D"
        android:endColor="#F59E0B"
        android:type="linear" />
    
    <corners android:radius="20dp" />
    
    <stroke
        android:width="2dp"
        android:color="#F59E0B" />
    
</shape>
