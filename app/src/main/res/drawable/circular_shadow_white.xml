<?xml version="1.0" encoding="utf-8"?>
<!-- Circular frame with black shadow for light mode (habit avatar) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer (black/gray shadow for light backgrounds) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size
                android:width="52dp"
                android:height="52dp" />
        </shape>
    </item>
    
    <!-- Main circle background -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>
