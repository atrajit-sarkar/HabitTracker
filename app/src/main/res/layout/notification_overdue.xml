<?xml version="1.0" encoding="utf-8"?>
<!-- Collapsed overdue notification with dual avatars -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Overdue Warning Icon on the Left (collapsed state) -->
    <ImageView
        android:id="@+id/notification_overdue_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="Overdue Warning" />

    <!-- Habit Avatar on the Right (collapsed state) -->
    <ImageView
        android:id="@+id/notification_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="Habit Avatar" />

    <!-- Text Content in the Middle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_overdue_icon"
        android:layout_toRightOf="@id/notification_overdue_icon"
        android:layout_toStartOf="@id/notification_avatar"
        android:layout_toLeftOf="@id/notification_avatar"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- Title with Red Color for urgency -->
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:scrollHorizontally="false" />

        <!-- Body Text with Orange Color (ellipsized when collapsed) -->
        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FFA500"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:scrollHorizontally="false" />
    </LinearLayout>

</RelativeLayout>
