<?xml version="1.0" encoding="utf-8"?>
<!-- Collapsed overdue notification with dual avatars -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Circular frame for overdue icon with adaptive shadow and glowing border -->
    <FrameLayout
        android:id="@+id/notification_overdue_frame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_shadow_white">
        
        <!-- Red border frame -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_glow_border">
            
            <!-- Overdue Warning Icon on the Left (collapsed state) - Circular -->
            <ImageView
                android:id="@+id/notification_overdue_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:contentDescription="Overdue Warning" />
        </FrameLayout>
    </FrameLayout>

    <!-- Circular frame for habit avatar with adaptive shadow (right side) -->
    <FrameLayout
        android:id="@+id/notification_avatar_frame"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_shadow_white">
        
        <!-- Habit Avatar on the Right (collapsed state) - Circular -->
        <ImageView
            android:id="@+id/notification_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            android:contentDescription="Habit Avatar" />
    </FrameLayout>

    <!-- Thought Bubble Container (between overdue icon and avatar) -->
    <FrameLayout
        android:id="@+id/thought_bubble_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_overdue_frame"
        android:layout_toRightOf="@id/notification_overdue_frame"
        android:layout_toStartOf="@id/notification_avatar_frame"
        android:layout_toLeftOf="@id/notification_avatar_frame"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true">
        
        <!-- Thought puff - small (closest to overdue icon) -->
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/thought_bubble_puff_small"
            android:contentDescription="Thought puff" />
        
        <!-- Thought puff - medium (overlapping) -->
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/thought_bubble_puff_medium"
            android:contentDescription="Thought puff" />
        
        <!-- Thought puff - large (overlapping, closest to text bubble) -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/thought_bubble_puff_large"
            android:contentDescription="Thought puff" />
        
        <!-- Main thought bubble with text content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/thought_bubble_main"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- Title with Red Color for urgency -->
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF5252"
                android:textSize="13sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:scrollHorizontally="false" />

            <!-- Body Text with Orange Color (single line with ellipsis in collapsed view) -->
            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="#FFA500"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollHorizontally="false" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
